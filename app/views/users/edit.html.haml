= render 'partial/header'

.mypage-body
  .mypage-main.clearfix
    = render 'partial/mypage_sidebar'
    %main.single-main.single-main__edit
      %section
        .common-container
          .common-container-inner
            %h2.common-container-inner__head
              本人情報の登録
            = form_for (current_user) do |f|
              .common-container-inner__content.user-container-inner__content-edit
                = render partial: "partial/forms/input-field", locals:{ label_name:"お名前", column: :nickname, placeholder: "例）新垣", maxlength: 10, f: f}
                = render partial: "partial/forms/input-form", locals:{column: :nickname, placeholder: "例）結衣", maxlength: 10, f: f}
                = render partial: "partial/forms/input-field", locals:{ label_name:"お名前", column: :nickname, placeholder: "例）アラガキ", maxlength: 12, f: f}
                = render partial: "partial/forms/input-form", locals:{column: :nickname, placeholder: "例）ユイ", maxlength: 12, f:f}
                = render partial: "partial/forms/input-field", locals:{ label_name:"郵便番号", column: :nickname, placeholder: "例）100-8176", maxlength: 8, f: f}
                = render partial: "partial/forms/select-form", locals:{ label_name:"都道府県", column: :nickname, selects: ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"], f: f}
                = render partial: "partial/forms/input-field", locals:{ label_name:"市区町村", column: :nickname, placeholder: "例）千代田区大手町", maxlength: 8, f: f}
                = render partial: "partial/forms/input-field", locals:{ label_name:"番地", column: :nickname, placeholder: "例）1-5-5", maxlength: 8, f: f}
                .form-wrapper
                  %label
                    建物名
                    %span.form-require
                      任意
                = render partial: "partial/forms/input-form", locals:{column: :nickname, placeholder: "例）大手町タワー", maxlength: 10, f: f}
                .form-wrapper
                  %label
                    電話
                    %span.form-require
                      任意
                = render partial: "partial/forms/input-form", locals:{column: :nickname, placeholder: "例）03-3214-1111", maxlength: 10, f: f}
                .form-wrapper
                  %label
                    生年月日
                    %span.form-require
                      必須
                %div.birth_select-wrapper
                  = f.date_select :created_at, { start_year: Time.now.year - 100,end_year: Time.now.year + 0,use_month_numbers: true, discard_month: true, discard_day: true}, {class: "date_select birth_select"}
                  年
                  = f.date_select :created_at, {discard_year: true,  use_month_numbers: true, date_separator: "月"}, {class: "date_select birth_select"}
                  日
                  %p ※出品されたことがある、本人情報未登録のお客様もご対象となります。
                .btn-content
                  = f.submit '次へ進む', disable_with: '保存中', class: "btn-red"
= render 'partial/footer-banner'
= render 'partial/footer'
= render 'partial/sell_btn'
